<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.sdi_mrdd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="example.com.sdi_mrdd.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity declaration for WellListActivity -->
        <activity
            android:name="example.com.sdi_mrdd.WellListActivity"
            android:label="@string/well_page_name"
            android:launchMode="singleTop"
            android:parentActivityName="example.com.sdi_mrdd.LoginActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.LoginActivity" />
        </activity>

        <!-- Activity declaration for WellDashboardActivity -->
        <activity
            android:name="example.com.sdi_mrdd.WellDashBoardActivity"
            android:label="@string/well_page_name"
            android:launchMode="singleTop"
            android:parentActivityName="example.com.sdi_mrdd.WellListActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.WellListActivity" />
        </activity>

        <!-- Activity declaration for AddCurveActivity -->
        <activity
            android:name="example.com.sdi_mrdd.AddCurveActivity"
            android:label="@string/add_curve_page_name"
            android:launchMode="singleTop"
            android:parentActivityName="example.com.sdi_mrdd.WellDashBoardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".AddCurveActivity" />
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.WellDashBoardActivity" />
        </activity>
        <activity
            android:name="example.com.sdi_mrdd.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:launchMode="singleTop"
            android:parentActivityName="example.com.sdi_mrdd.WellListActivity" >
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>