<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.sdi_mrdd" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity declaration for WellListActivity -->
        <activity
            android:name=".WellListActivity"
            android:label="@string/well_page_name"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.LoginActivity" />
        </activity>

        <!-- Activity declaration for WellDashboardActivity -->
        <activity
            android:name=".WellDashBoardActivity"
            android:label="@string/well_page_name"
            android:launchMode="singleTop"
            android:parentActivityName=".WellListActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.WellListActivity" />
        </activity>

        <!-- Activity declaration for AddCurveActivity -->
        <activity
            android:name=".AddCurveActivity"
            android:label="@string/add_curve_page_name"
            android:launchMode="singleTop"
            android:parentActivityName=".WellDashBoardActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".AddCurveActivity" />
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.com.sdi_mrdd.WellDashBoardActivity" />
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:launchMode="singleTop"
            android:parentActivityName=".WellListActivity">
        </activity>
    </application>

</manifest>
